{
  "manifest_version": 3,
  "name": "web2readablePDF",
  "version": "0.0.1",
  "description": "A Firefox-Addon which converts your webpage into a nicely readable PDF, downloads it automaticly and remembers your selections.",
  
  "icons": {
    "48": "icons/icon-48.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
  "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["scripts/background.js"]
  },
  
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "web2readablePDF"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"] 
    }
  ]
}
